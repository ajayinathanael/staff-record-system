<div class="container">
    <h2>Editing ....</h2>
    <form action="/" method="POST" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-10 mb-3 form-group">
                <input type="text" class="form-control" placeholder="lastname" name="lastname" required>
            </div>

            <div class="col-md-10 mb-3 form-group">
                <input type="text" class="form-control" placeholder="firstname" name="firstname" required>
            </div>

            <div class="col-md-10 mb-3 form-group">
                <input type="text" class="form-control" placeholder="Address" name="address" required>
            </div>

            <div class="col-md-10 mb-3 form-group">
                <input type="text" class="form-control" placeholder="department" name="department" required>
            </div>
            
            <div class="col-md-10 mb-3 form-group">
                <input type="text" class="form-control" placeholder="faculty" name="faculty" required>
            </div>

            <div class="col-md-10 mb-3 form-group">
               Date of Birth <input type="date" class="form-control" placeholder="Date of Birth" name="dob" required>
            </div>

            <div class="col-md-10 mb-3 form-group">
                <textarea name="courses" placeholder="Courses taught in full" class="form-control" rows="20" cols="50"></textarea>
            </div>
            
            <div class="col-md-10 mb-3 form-group">
                Upload your Picture: <input type="file" name="image" class="form-control text-black" required>
            </div>

            <div class="col-md-10 mb-3 form-group">
                <textarea name="comment" placeholder="Comment" class="form-control" rows="5" cols="15"></textarea>
            </div>
                        
            <div class="col-md-10 mb-3 form-group">
                <input type="text" class="form-control" placeholder="Your Facebook user name" name="facebook">
            </div>

            <div class="col-md-10 mb-3 form-group">
                <a href="/" class="btn btn-warning">Cancel</a>
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
       
    </form>
</div>

