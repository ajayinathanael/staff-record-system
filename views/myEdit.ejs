<%- include ("partials/header") %>

<!-- Navigation -->
<nav class="navbar navbar-expand-lg bg-dark text-light navbar-dark py-3">
    <div class="container">
        
        <a href="#" class="navbar-brand">
            <img src="/images/images.png" width="30" height="30" class="d-inline-block align-top" alt="">
            Staff Record Project
        </a>

    </div>
</nav>


<div class="container">
    <h2>Editing <%= staff.lastname%> <%=staff.firstname%> </h2>
    <form action="/edit_staff/<%=staff._id%>?_method=put" method="POST" enctype="multipart/form-data">

        <div class="row">
            <div class="col-md-10 mb-3 form-group">
                <input type="text" class="form-control" placeholder="lastname" name="lastname" value="<%= staff.lastname%>"
                required>
            </div>

            <div class="col-md-10 mb-3 form-group">
                <input type="text" class="form-control" placeholder="firstname" name="firstname" value="<%= staff.firstname%>"
                required>
            </div>

            <div class="col-md-10 mb-3 form-group">
                <input type="text" class="form-control" placeholder="Address" name="address" value="<%= staff.address%>"
                required>
            </div>

            <div class="col-md-10 mb-3 form-group">
                <input type="text" class="form-control" placeholder="department" name="department" value="<%= staff.department%>"
                required>
            </div>
            
            <div class="col-md-10 mb-3 form-group">
                <input type="text" class="form-control" placeholder="faculty" name="faculty" value="<%= staff.faculty%>"
                required>
            </div>

            <div class="col-md-10 mb-3 form-group">
               Date of Birth <input type="date" class="form-control" placeholder="Date of Birth" name="dob" value="<%= staff.dob%>"
               required>
            </div>

            <div class="col-md-10 mb-3 form-group">
                <textarea name="courses" placeholder="Courses taught in full" class="form-control" rows="20" cols="50" value="<%= staff.courses%>"
                ></textarea>
            </div>
            
             <div class="col-md-10 mb-3 form-group">
                Upload Picture: <input type="file" accept="image/*" name="photo" class="form-control text-black" required>
            </div>

            <div class="col-md-10 mb-3 form-group">
                <textarea name="comment" placeholder="Comment" class="form-control" rows="5" cols="15" value="<%= staff.comment%>"
                ></textarea>
            </div>
                        
            <div class="col-md-10 mb-3 form-group">
                <input type="text" class="form-control" placeholder="Your Facebook user name" name="facebook" value="<%= staff.facebook%>"
                required>
            </div>

            <div class="col-md-10 mb-3 form-group">
                <a href="/" class="btn btn-warning">Cancel</a>
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
       
    </form>
</div>

<%- include ("partials/footer") %>